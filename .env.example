# Postgres connection string
DATABASE_URL=postgresql://user:password@host/db

# Neon Auth URL (Project -> Branch -> Auth -> Configuration)
NEON_AUTH_BASE_URL=https://your-neon-auth-url/neondb/auth
NEXT_PUBLIC_NEON_AUTH_URL=https://your-neon-auth-url/neondb/auth

# Local app URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 32+ char random secret used to sign auth cookies
# Generate with: openssl rand -base64 32
NEON_AUTH_COOKIE_SECRET=replace-with-a-long-random-secret
